{
    "version": "1",
    "configurations": [
        {
   
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo con la gramatica
            "grammar": "src/main/java/primerproyecto/primerproyecto.g4",
            // Archivo a parsear
            "input": "input/entrada.txt",
            // Simbolo inicial
            "startRule": "programa",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "primerproyecto.App",
            "projectName": "primerproyecto"
        }
    ]
}